<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/ivOfficeImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/gray"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="125dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivgreencirc"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/greencirc"
                />

            <TextView
                android:id="@+id/tvOfficeAvailability"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tvOfficeName"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:textFontWeight="8"
            android:layout_height="20dp"
            android:layout_marginTop="145dp"
            />

        <TextView
            android:id="@+id/tvOfficeDescription"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="165dp"

            />

        <TextView
            android:id="@+id/tvOfficeFacilities"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="185dp"
            android:layout_alignParentBottom="true" />


    </androidx.cardview.widget.CardView>
</LinearLayout>